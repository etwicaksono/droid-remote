# ================================
# Droid Remote Control - Configuration
# ================================
# Copy this file to .env and update values

# ================================
# Telegram Configuration
# ================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram user ID (get from @userinfobot)
TELEGRAM_CHAT_ID=your_user_id

# Comma-separated list of allowed user IDs
TELEGRAM_ALLOWED_USERS=your_user_id

# ================================
# Bridge Server
# ================================
# Secret for hook authentication (generate a random string)
BRIDGE_SECRET=your_secret_here

# Server binding
BRIDGE_HOST=0.0.0.0
BRIDGE_PORT=8765

# Full URL for hook scripts (use localhost for hooks running on same machine)
BRIDGE_URL=http://127.0.0.1:8765

# ================================
# Web UI
# ================================
# Public URL for Web UI (used in notifications)
WEB_UI_URL=http://localhost:3000

# ================================
# Web Authentication
# ================================
# Username for Web UI login
AUTH_USERNAME=admin

# Password for Web UI login (change this!)
AUTH_PASSWORD=your_password_here

# JWT secret key (generate with: openssl rand -hex 32)
JWT_SECRET=your_random_secret_here

# JWT token expiry in hours
JWT_EXPIRY_HOURS=24

# ================================
# Timeouts (in seconds)
# ================================
DEFAULT_TIMEOUT=300
PERMISSION_TIMEOUT=120
NOTIFY_TIMEOUT=10

# ================================
# Telegram Notifications
# ================================
# Max chars for task result in Telegram (0 = no limit)
TELEGRAM_TASK_RESULT_MAX_LENGTH=0

# ================================
# Logging
# ================================
LOG_LEVEL=INFO
LOG_FILE=logs/bridge.log

# ================================
# Docker Mode
# ================================
# Set to true when running in Docker (disables directory browser)
DOCKER_MODE=false

# Predefined project directories (pipe-separated)
# Users can select from these in the Custom Task page
PROJECT_DIRS=/home/user/project1|/home/user/project2

# ================================
# Cloudinary (for image upload)
# ================================
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Max upload size in MB (default: 10)
MAX_UPLOAD_SIZE_MB=10
